{
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "src",
        "paths": {
            "~/*": ["./src/*"]
        },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  